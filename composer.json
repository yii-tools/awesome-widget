{
    "name": "yii-tools/awesome-widget",
    "type": "library",
    "description": "Foundation classes and components used by Yiitools Awesome Widget.",
    "keywords": [
        "yii-tools",
        "awesome-widget",
        "yii3"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "yii-tools/form-model": "^1.0@dev",
        "yii-tools/html": "^1.0@dev",
        "yiisoft/widget": "^2.0"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.3",
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.28",
        "vimeo/psalm": "^5.6",
        "yii-tools/support": "^1.0@dev",
        "yiisoft/test-support": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Widget\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Widget\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "psalm": "psalm",
        "test": "phpunit"
    }
}
